{
    "tabWidth": 4,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "semi": true,
                "trailingComma": "es5",
                "singleQuote": false,
                "arrowParens": "always"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "singleQuote": true,
                "tabWidth": 4
            }
        }
    ]
}
